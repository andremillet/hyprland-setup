{
    "__separator__": "Hyprland Personal Setup (v10)",
    "hostname": "madara",
    "username": "woulschneider",
    "password": "",
    "profile": "minimal",
    "kernels": ["linux", "linux-headers"],
    "timezone": "America/Sao_Paulo",
    "locale": "en_US.UTF-8",
    "keyboard-layout": "br",
    "bootloader": "systemd-boot",
    "swap": true,
    "disk_layout": {
        "__config_type__": "default_layout",
        "layout_type": "BestCase",
        "target_disk": "/dev/nvme0n1",
        "filesystem": "btrfs",
        "wipe": true,
        "encryption": {
            "encryption_password": "",
            "encryption_type": "luks"
        }
    },
    "packages": ["git", "curl", "wget"],
    "nic": {
        "type": "nm"
    },
    "audio": {
        "server": "pipewire"
    },

    "repo": null,
    "script": null,

    "post_install_commands": [
        "echo 'Baixando o wrapper de pós-instalação...'",
        "curl -fsSL -o /tmp/post_install_wrapper.sh https://raw.githubusercontent.com/andremillet/hyprland-setup/main/post_install_wrapper.sh",
        "chmod +x /tmp/post_install_wrapper.sh",
        "echo 'Executando o wrapper de pós-instalação...'",
        "/tmp/post_install_wrapper.sh",
        "echo 'Wrapper executado, limpando...'",
        "rm /tmp/post_install_wrapper.sh",
        "echo 'Comandos de pós-instalação concluídos.'"
    ]
}
